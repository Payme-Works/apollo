{
  "name": "apollo",
  "private": true,
  "version": "1.0.0",
  "author": "Andr√© 'Dezzy' <@andredezzy>",
  "license": "MIT",
  "engines": {
    "node": ">= 12.16.x",
    "yarn": ">= 1.22.x",
    "npm": ">= 6.14.x"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/PaymeTrade/apollo.git"
  },
  "bugs": {
    "url": "https://github.com/PaymeTrade/apollo/issues"
  },
  "workspaces": {
    "packages": [
      "packages/*"
    ],
    "nohoist": [
      "**/typeorm/**",
      "**/typeorm"
    ]
  },
  "scripts": {
    "lint": "eslint packages --ext ts,tsx",
    "lint:fix": "yarn lint --fix",
    "test": "lerna run test --scope @apollo/* --stream --parallel -- --watchAll false",
    "app": "yarn workspace @apollo/app"
  },
  "lint-staged": {
    "packages/**/*.{ts,tsx}": [
      "yarn lint:fix",
      "git add",
      "yarn test --bail --findRelatedTests"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "git-branch-is -r \"^((?!main).)*$\" && lint-staged",
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  },
  "devDependencies": {
    "@babel/core": "7.10.5",
    "@babel/plugin-transform-runtime": "7.10.5",
    "@babel/preset-env": "7.10.4",
    "@babel/preset-react": "7.10.4",
    "@babel/preset-typescript": "7.10.4",
    "@babel/runtime": "7.10.5",
    "@commitlint/cli": "^11.0.0",
    "@commitlint/config-conventional": "^11.0.0",
    "@commitlint/travis-cli": "^11.0.0",
    "@types/jest": "^26.0.15",
    "@typescript-eslint/eslint-plugin": "^4.9.0",
    "@typescript-eslint/parser": "^4.9.0",
    "eslint": "^7.14.0",
    "eslint-config-airbnb": "^18.2.1",
    "eslint-config-prettier": "^6.15.0",
    "eslint-import-resolver-typescript": "^2.3.0",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-import-helpers": "^1.1.0",
    "eslint-plugin-jest": "^24.1.3",
    "eslint-plugin-jsx-a11y": "^6.4.1",
    "eslint-plugin-prettier": "^3.1.4",
    "eslint-plugin-react": "^7.21.5",
    "eslint-plugin-react-hooks": "^4.2.0",
    "git-branch-is": "^4.0.0",
    "husky": "^4.3.0",
    "jest": "^26.6.3",
    "jest-dom": "^4.0.0",
    "lerna": "^3.22.1",
    "lint-staged": "^10.4.0",
    "prettier": "^2.0.5",
    "rimraf": "3.0.2",
    "ts-jest": "26.4.4",
    "typescript": "^4.1.2"
  },
  "dependencies": {}
}
