{
  "name": "@apollo/app",
  "version": "1.0.0",
  "author": "Andr√© 'Dezzy' <@andredezzy>",
  "homepage": "https://apollo.paymetrade.com",
  "license": "MIT",
  "main": "./dist/main.js",
  "scripts": {
    "build": "rimraf dist && npm-run-all -p build:*",
    "build:electron": "cross-env NODE_ENV=production webpack --config webpack/electron.webpack.js",
    "build:react": "cross-env NODE_ENV=production webpack --config webpack/react.webpack.js",
    "disabled-build:ares": "python3 -m PyInstaller -F ../ares/main.py --distpath ../ares/dist",
    "olddev": "ts-node -r tsconfig-paths/register src/app.ts",
    "dev": "npm-run-all -p dev:react electron:serve",
    "dev:electron": "cross-env NODE_ENV=development webpack --config webpack/electron.webpack.js && electron .",
    "dev:react": "cross-env NODE_ENV=development webpack-dev-server --config webpack/react.webpack.js",
    "electron:serve": "wait-on http-get://localhost:4000/ && npm run dev:electron",
    "disabled:postinstall": "electron-builder install-app-deps",
    "lint": "eslint --ext .tsx,.ts,.js src/ electron/",
    "package": "yarn build && electron-builder build --publish never",
    "test": "jest --passWithNoTests",
    "tsc": "tsc --noEmit"
  },
  "build": {
    "appId": "com.paymetrade.apollo",
    "productName": "Apollo",
    "files": [
      "dist/"
    ],
    "mac": {
      "category": "public.app-category.developer-tools"
    },
    "linux": {
      "target": [
        "AppImage"
      ],
      "category": "Development"
    },
    "directories": {
      "buildResources": "build",
      "output": "release"
    }
  },
  "dependencies": {
    "@unform/core": "^2.1.3",
    "@unform/web": "^2.1.3",
    "axios": "^0.21.0",
    "date-fns": "^2.17.0",
    "dotenv": "^8.2.0",
    "electron-store": "^6.0.1",
    "electron-updater": "^4.3.5",
    "i18next": "^19.8.4",
    "i18next-electron-language-detector": "^0.0.10",
    "i18next-fs-backend": "^1.0.5",
    "lodash": "^4.17.20",
    "npm-run-all": "^4.1.5",
    "polished": "^4.0.5",
    "react": "^17.0.1",
    "react-contextmenu": "^2.14.0",
    "react-dom": "^17.0.1",
    "react-i18next": "^11.7.4",
    "react-icons": "^4.1.0",
    "react-modal": "^3.12.1",
    "react-resizable": "^1.11.0",
    "react-router-dom": "^5.2.0",
    "react-spring": "^8.0.27",
    "react-use": "^15.3.4",
    "react-virtual": "^2.3.2",
    "recoil": "^0.1.2",
    "styled-components": "^5.2.1",
    "type-fest": "^0.20.2",
    "uuid": "^8.3.1",
    "wait-on": "^5.2.0",
    "yup": "^0.32.0"
  },
  "devDependencies": {
    "@pmmmwh/react-refresh-webpack-plugin": "^0.4.3",
    "@testing-library/react": "^11.2.2",
    "@types/i18next-fs-backend": "^1.0.0",
    "@types/react": "^17.0.0",
    "@types/react-dom": "^17.0.0",
    "@types/react-modal": "^3.10.6",
    "@types/react-resizable": "^1.7.2",
    "@types/react-router-dom": "^5.1.7",
    "@types/styled-components": "^5.1.4",
    "@types/uuid": "^8.3.0",
    "@types/yup": "^0.29.10",
    "babel-loader": "^8.2.2",
    "commitizen": "^4.2.2",
    "cross-env": "^7.0.3",
    "cz-conventional-changelog": "^3.3.0",
    "electron": "^11.0.3",
    "electron-builder": "^22.9.1",
    "html-webpack-plugin": "^4.5.0",
    "json-schema-typed": "^7.0.3",
    "lint-staged": "^10.5.2",
    "react-refresh": "^0.9.0",
    "sort-package-json": "^1.48.0",
    "ts-jest": "^26.4.4",
    "ts-node-dev": "^1.0.0",
    "webpack": "^5.9.0",
    "webpack-cli": "^3.3.12",
    "webpack-dev-server": "^3.11.0"
  }
}
